{
  "manifest_version": 3,
  "name": "MookBarked",
  "version": "1.0.0",
  "description": "Save articles and videos as GitHub Issues with secure local credential storage",
  
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://api.github.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
